using System;

namespace Decrescente_impar
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int a, b;

            Console.WriteLine("sistema de impares decrecentes!");
            Console.WriteLine("Digite o primeiro número: ");
            a = int.Parse(Console.ReadLine());

            
            do
            {
                Console.WriteLine("Digite o segundo número: ");
                b = int.Parse(Console.ReadLine());

                if (b >= a)
                {
                    Console.WriteLine("\n O segundo número digitado deve ser MENOR que o primeiro!\n");
                }

            } while (b >= a); 

            Console.WriteLine($"\n Os números ímpares entre {a} e {b} (em ordem decrescente):");

            for (int c = a; c >= b; c--)
            {
                if (c % 2 != 0)
                {
                    Console.WriteLine(c);
                }
            }
        }
    }
}
